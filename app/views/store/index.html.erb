


<div class="container">
	<p><%= notice  %></p>
	<h1>Catalog page</h1>
	<hr>
	<br>
	<% cache @products do %>
		<% @products.each do |product|  %>
			<% cache product do %>
			<div class="jumbotron">
				<%= image_tag(product.image_url) %>
				<br>
				<br>
				<h3><%= product.title %></h3>
				<br>
				<br>
				<%= sanitize(product.description) %>
				<br>
				<br>
				<span><%= number_to_currency(product.price)  %></span>
			</div>
			<% end %>
		<% end %>
	<% end %>
</div>